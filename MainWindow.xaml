<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid x:Name="StudentsDataGrid" AutoGenerateColumns="True" Margin="10"/>
        <Button x:Name="LoadButton" Content="Загрузить студентов" Click="LoadButton_Click" Margin="10" Width="150"/>
        <Button x:Name="AddButton" Content="Добавить тестового" Click="AddButton_Click" Margin="10" Width="150"/>
    </StackPanel>
</Window>
